{
  "compilerOptions": {
    "outDir": "dist/server",
    "rootDir": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "shared/**/*", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server/vite.ts",
    "vite.config.ts",
    "server/tests",
    "server/__tests__",
    "server/**/*.test.ts",
    "server/**/*.spec.ts"
  ]
}