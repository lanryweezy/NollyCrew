# NollyCrewHub Production Environment Variables

# Node Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nollycrewhub

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
EMAIL_TOKEN_SECRET=your-email-token-secret-change-in-production
RESET_TOKEN_SECRET=your-reset-token-secret-change-in-production

# Payment Processing
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key

# AI Services
OPENAI_API_KEY=your-openai-api-key

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Redis (Optional - for session management and caching)
REDIS_URL=redis://localhost:6379

# Client URL
CLIENT_URL=https://yourdomain.com

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Form Integration (Optional)
GOOGLE_FORM_URL=your-google-form-url
GOOGLE_FORM_EMAIL_ENTRY=entry.123456789
GOOGLE_FORM_NAME_ENTRY=entry.987654321
GOOGLE_FORM_SOURCE_ENTRY=entry.456789123

# Server Port
PORT=5000